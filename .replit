run = "npm run dev"
modules = ["nodejs-20"]
hidden = [".config", "package-lock.json"]
entrypoint = "index.html"

[nix]
channel = "stable-24_05"

[unitTest]
language = "nodejs"

[deployment]
deploymentTarget = "gce"
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "vite preview --host 0.0.0.0 --port 4173"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 4173
externalPort = 80

[workflows]
runButton = "Run Dev Server"
run = "npm run preview -- --port $PORT"
port = 5000
